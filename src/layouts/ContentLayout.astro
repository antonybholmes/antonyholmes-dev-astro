---
import type { ILayoutProps } from "@interfaces/layout-props"
import DefaultLayout from "./DefaultLayout.astro"

import { ContentDiv } from "@components/content-div"

export interface Props extends ILayoutProps {
  contentClassName?: string
}

let { title, tab, contentClassName, className = "py-8" } = Astro.props
---

<DefaultLayout title={title} tab={tab} className={className}>
  <ContentDiv slot="main" contentClassName={contentClassName}>
    <slot name="main" />
  </ContentDiv>
</DefaultLayout>
